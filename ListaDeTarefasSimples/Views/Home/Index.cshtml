@model HomeControllerViewModel

<div class="container">
    <div row="row">
        <h1 class="mb-4">Lista de Tarefas</h1>

        <form asp-action="Criar" method="post" class="mb-4">
            <input class="form-control" type="text" name="Tarefa" placeholder="Descrição da tarefa" required />
            <button class="btn btn-success mt-2" type="submit">Adicionar Tarefa</button>
        </form>

        <table class="table table-bordered table-striped">
            <!--Cabeçalho da tabela-->
            <thead>
                <tr>
                    <th>Status</th>
                    <th>Descrição</th>
                    <th>Data</th>
                    <th>Editar</th>
                    <th>Excluir</th>
                </tr>
            </thead>
            <!--Dados da tabela-->
            <tbody>
                @foreach (var item in Model.Lista)
                {
                    <tr>
                        <td>@item.Status</td>
                        <td>@item.Tarefa</td>
                        <td>@item.Data</td>
                        <td>
                            <form asp-action="Editar" method="post" class="mb-4">
                                <input type="hidden" name="Id" value="@item.Id" />
                                <button class="btn btn-primary mt-2 mb-1" type="submit">Editar</button>
                                <input class="form-control" type="text" name="Tarefa" placeholder="Descrição da tarefa" required />
                            </form>
                        </td>
                        <td>
                            <form asp-action="Remover" method="post" class="mb-4">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button class="btn btn-danger mt-2" type="submit">Excluir</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
